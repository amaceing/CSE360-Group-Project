<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.collections.*?>


<BorderPane fx:controller="app.controllers.RadioController" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml">
    <top>
        <fx:include source="topBar.fxml" fx:id="topBar"/>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="200" styleClass="inner">
            <VBox spacing="75">
                <Label text="Volume" styleClass="medium-header"/>
                <HBox styleClass="segmented-button-bar">
                    <Button text="+" styleClass="first" />
                    <Button text="-" styleClass="last" />
                </HBox>
                <Label text="Channel" styleClass="medium-header"/>
                <HBox styleClass="segmented-button-bar">
                    <Button text="AM" fx:id="AMButton" styleClass="first" />
                    <Button text="FM" fx:id="FMButton" styleClass="last" />
                </HBox>
            </VBox>
            <VBox>
                <HBox alignment="CENTER">
                    <ListView>
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Station One"/>
                                <String fx:value="Station Two"/>
                                <String fx:value="Station Three"/>
                                <String fx:value="Station Four"/>
                                <String fx:value="Station Five"/>
                            </FXCollections>
                        </items>
                    </ListView>
                </HBox>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <fx:include source="bottomBar.fxml" fx:id="bottomBar"/>
    </bottom>
</BorderPane>